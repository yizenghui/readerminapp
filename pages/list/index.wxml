<!--index.wxml-->
<import src="../common/head.wxml"/>
<import src="../common/foot.wxml"/>

<view wx:if="{{loading}}"> 
  <view>加载中...</view>
  <view>加载等待过程中出现全屏广告...</view>
</view>
<view wx:elif="{{error}}"> 

  <view>出错了</view>
  <view>没有办法获取目录信息...</view>
  <view>推荐用户干啥啥啥去...</view>

  </view>
<view wx:else> 

      <view class="container">

      <view class="index">
        <view class="index-hd">
        
          <button style='width:80px' class="index-logo-button" wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">
            <image class="index-logo" src="../resources/kind/logo.png"></image>
          </button>
          <block wx:else>
            <image class="index-logo" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
          </block>
          <view class="index-desc">{{title}}</view>
        </view>
      </view>

      <view wx:if="{{list.length > 0}}">
        <view class="weui-cells" wx:if="{{this_read.url}}">
          <view  class="weui-cell weui-cell_access">
            <view class="weui-cell__bd">
                  <text></text>
              </view>
              <navigator class="weui-cell__ft weui-cell__ft_in-access weui-media-box__title" url="../info/index?url={{this_read.url}}">
                {{this_read.title}}
              </navigator>
          </view>
        </view>

        <view class="weui-cells">
        <view  class="weui-cell weui-cell_access">
          <view class="weui-cell__bd">
              <text>目录</text>
              <!--<form bindsubmit="formSubscribe" report-submit="true" wx:if="{{userInfo.avatarUrl}}">
                <button size="mini" type="primary"  class="list-min-botton" formType="submit">订阅更新</button>
              </form> -->
          </view>
          <view class="weui-cell__ft" bindtap="tapReverseList">
            <button size="mini" class="list-min-botton" >reverse</button>
          </view>
        </view>
          <navigator class="weui-cell weui-cell_access" url="../info/index?url={{item.url}}"  wx:for="{{list}}"  wx:key="*this" >
            <div class="weui-cell__bd">
                <p>{{item.title}}</p>
            </div>
          </navigator>
        </view>
        </view>
      <view wx:else> 

      </view>
      <template is="foot"/>
      </view>
</view>

