
<!--index.wxml-->
<import src="../common/head.wxml"/>
<import src="../common/foot.wxml"/>

<view class="container">

<view class="index">
  <view class="index-hd">
   <navigator  url="/pages/index/index" >
     
    <image class="index-logo" src="../resources/kind/logo.png"></image>
    </navigator>
    <view class="index-desc">看书，再也不用烦弹窗广告了！！！</view>
  </view>
</view>
<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="weui-search-bar weui-search-bar_focusing">
        <view class="weui-search-bar__form" >
          <view class="weui-search-bar__box weui-cell_input">
          
          <input name="url" value="{{url}}" style="height:1.6rem" placeholder="请粘贴文章目录链接地址" autocomplete="off"/>
<icon class="weui-icon-clear" type="clear" size="13" bindtap="tapClearInput"/>
          </view>
        </view>
        <view class="weui-search-bar__cancel-btn" bindtap="tapGoto" >载入目录</view>
      </view>
  <!-- <view class="btn-area">
    <button type="primary" formType="submit" size="mini">载入目录</button>
    <button size="mini" formType="reset">重置表单</button>
  </view> -->
</form>

<view wx:if="{{logs.length > 0}}">

<view class="weui-cells__title" style="margin-top:1em;margin-bottom:0.2em;">浏览记录
  <text class="textright" bindtap="tapClearAllCache">清空缓存</text>
</view>
<view class="weui-cells" style="margin-top:0;">
    <navigator class="weui-cell weui-cell_access" url="../list/index?url={{item.url}}"  wx:for="{{logs}}">
      <view class="weui-cell__bd">
          <text>{{item.title}}</text>
      </view>
      <view class="weui-cell__ft  weui-cell__ft_in-access">
      </view>
    </navigator>
  </view>
  </view>
<view wx:else>
</view>

  <template is="foot"/>
</view>
